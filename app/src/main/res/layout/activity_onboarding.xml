<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.OnboardingActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/activity_onboarding_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingTop="28dp"
        app:trackColor="@color/background_surface"
        app:indicatorColor="@color/background_contrast"
        android:progress="25"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/activity_oboarding_frame"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_progressbar"
        app:layout_constraintBottom_toTopOf="@id/activity_onboarding_slider"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/activity_onboarding_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:outer_color="@color/background_contrast"
        app:inner_color="@color/background_color"
        app:slider_icon="@drawable/next_arrow"
        app:text="Swipe to next"
        app:text_appearance="@style/Booki_logo_font"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_onboarding_splash_card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/background_contrast"
        app:cardCornerRadius="360dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/activity_onboarding_slider"
        app:layout_constraintBottom_toBottomOf="@id/activity_onboarding_slider"
        app:layout_constraintStart_toStartOf="@id/activity_onboarding_slider"
        app:layout_constraintEnd_toEndOf="@id/activity_onboarding_slider"/>

    <com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout
        android:id="@+id/activity_onboarding_splash_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_splash_heading"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where AI redefines literature..."
            android:textColor="@color/background_color"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/league_spartan"/>
    </com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout>


    <com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout
        android:id="@+id/activity_onboarding_splash_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booki_logo_contrasted"
            android:textSize="60dp"
            android:fontFamily="@font/league_spartan"/>
    </com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout>

    <com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout
        android:id="@+id/activity_onboarding_splash_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@color/background_contrast"
            android:textSize="60dp"
            android:textColor="@color/background_color"
            android:fontFamily="@font/league_spartan"/>
    </com.appgozar.fadeoutparticle.FadeOutParticleFrameLayout>

    <ImageView
        android:id="@+id/activity_onboarding_splash_cat"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/hi_cat"
        android:visibility="gone"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/activity_onboarding_slider_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:visibility="gone"
        app:outer_color="@color/background_color"
        app:inner_color="@color/background_contrast"
        app:slider_icon="@drawable/next_arrow"
        app:text="Finish"
        app:text_appearance="@style/Booki_logo_font_contrasted"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>