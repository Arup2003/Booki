<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/individual_snippet_parent_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/background_surface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/individual_snippet_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:backgroundTint="@color/background_color"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/individual_snippet_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/individual_snippet_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/mainfont"
            android:text="This is the body of the snippet"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/individual_snippet_card"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/individual_snippet_authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Author name"
            android:textSize="10dp"
            android:textColor="@color/background_contrast"
            android:fontFamily="@font/mainfont"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/individual_snippet_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Around the world in 80 days"
            android:textSize="10dp"
            android:textColor="@color/background_contrast"
            android:fontFamily="@font/mainfont"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toTopOf="@id/individual_snippet_authorname"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>