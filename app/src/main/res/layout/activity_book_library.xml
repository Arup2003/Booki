<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookLibraryActivity">

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/book_library_read_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:text="Read now"
        app:text_size="24dp"
        app:icon_margin="15dp"
        app:slider_icon="@drawable/library_icon_selected"
        app:outer_color="@color/background_contrast"
        app:inner_color="@color/background_color"
        app:text_appearance="@style/Booki_logo_font"

        android:layout_marginHorizontal="20dp"

        android:elevation="20dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<com.factor.bouncy.BouncyNestedScrollView

    android:id="@+id/book_library_book_display_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:fling_animation_size=".7"
    app:overscroll_animation_size=".7"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="MissingClass">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.BookLibraryFragment"
    android:background="@color/background_color"
    tools:ignore="MissingClass">

    
    <ImageView
        android:id="@+id/book_library_background_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"


        />

    <androidx.cardview.widget.CardView
        android:id="@+id/book_library_book_cover_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="@color/shadow_color"

        app:layout_constraintEnd_toEndOf="@+id/book_library_main_display_card"
        app:layout_constraintStart_toStartOf="@+id/book_library_main_display_card"
        app:layout_constraintTop_toTopOf="@+id/book_library_main_display_card"
        app:layout_constraintBottom_toTopOf="@id/book_library_main_display_card">

        <ImageView
            android:id="@+id/book_library_book_cover_img"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/book_library_main_display_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-100dp"

        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/secondary_background_color"
        app:cardElevation="12dp"
        android:outlineSpotShadowColor="@color/shadow_color"

        app:layout_constraintTop_toBottomOf="@id/book_library_background_img">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/book_library_share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_display_element_share"

                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <ImageView
                android:id="@+id/book_library_like_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_display_element_like"

                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/book_library_share_img"
                app:layout_constraintStart_toStartOf="@id/book_library_share_img"
                app:layout_constraintEnd_toEndOf="@id/book_library_share_img" />

            <TextView
                android:id="@+id/book_library_book_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="130dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Book name"
                android:fontFamily="@font/league_spartan"
                android:textSize="20dp"

                app:layout_constraintBottom_toTopOf="@+id/book_library_book_author"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@id/book_library_book_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="~author name"
                android:textSize="12dp"
                android:textColor="@color/secondary_foreground_color"
                android:gravity="center_horizontal"
                android:fontFamily="@font/league_spartan"


                app:layout_constraintTop_toBottomOf="@id/book_library_book_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <ImageView
                android:id="@+id/book_library_streak_img"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_marginLeft="60dp"
                android:background="@drawable/streak"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/book_library_separator_img"
                app:layout_constraintEnd_toStartOf="@id/book_library_streak_tv"
                app:layout_constraintBottom_toBottomOf="@id/book_library_separator_img"/>

            <TextView
                android:id="@+id/book_library_streak_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14dp"
                android:text="30 days"
                android:fontFamily="@font/league_spartan"

                app:layout_constraintStart_toEndOf="@id/book_library_streak_img"
                app:layout_constraintTop_toTopOf="@id/book_library_separator_img"
                app:layout_constraintEnd_toStartOf="@id/book_library_separator_img"
                app:layout_constraintBottom_toBottomOf="@id/book_library_separator_img"/>

            <ImageView
                android:id="@+id/book_library_separator_img"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/separator_icon"

                app:layout_constraintTop_toBottomOf="@id/book_library_book_author"
                app:layout_constraintStart_toEndOf="@id/book_library_streak_tv"
                app:layout_constraintEnd_toStartOf="@id/book_library_price_img"/>


            <ImageView
                android:id="@+id/book_library_price_img"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@drawable/price"

                app:layout_constraintTop_toTopOf="@id/book_library_separator_img"
                app:layout_constraintStart_toEndOf="@id/book_library_separator_img"
                app:layout_constraintEnd_toStartOf="@id/book_library_price_tv"
                app:layout_constraintBottom_toBottomOf="@id/book_library_separator_img"/>

            <TextView
                android:id="@+id/book_library_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="60dp"
                android:text="$ 59.00"
                android:textSize="14dp"
                android:fontFamily="@font/league_spartan"

                app:layout_constraintStart_toEndOf="@id/book_library_price_img"
                app:layout_constraintTop_toTopOf="@id/book_library_separator_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/book_library_separator_img"/>



            <TextView
                android:id="@+id/book_library_book_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Summary"
                android:fontFamily="@font/league_spartan"

                android:paddingHorizontal="15dp"
                android:background="@color/secondary_background_color"

                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/book_library_separator_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/book_library_book_summary_content"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="15dp"

                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textSize="13dp"
                android:textColor="@color/secondary_foreground_color"
                android:gravity="fill"
                android:fontFamily="@font/mainfont"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_library_book_summary_title"
                app:layout_constraintBottom_toTopOf="@id/book_library_read_more_btn"/>

            <TextView
                android:id="@+id/book_library_read_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@color/secondary_background_color"
                android:paddingHorizontal="7dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:text="read more"
                android:fontFamily="@font/league_spartan"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_library_book_summary_content"
                app:layout_constraintBottom_toBottomOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/book_library_additional_stats_pages_img"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:background="@drawable/page_icon"

        app:layout_constraintEnd_toStartOf="@id/book_library_additional_stats_language_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/book_library_additional_stats_language_img"
        app:layout_constraintBottom_toBottomOf="@id/book_library_additional_stats_language_img"/>

    <ImageView
        android:id="@+id/book_library_additional_stats_language_img"

        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/language_icon"


        app:layout_constraintEnd_toStartOf="@id/book_library_additional_stats_downloads_img"
        app:layout_constraintStart_toEndOf="@id/book_library_additional_stats_pages_img"
        app:layout_constraintTop_toBottomOf="@id/book_library_main_display_card" />

    <ImageView
        android:id="@+id/book_library_additional_stats_downloads_img"

        android:layout_width="20dp"
        android:layout_height="20dp"

        android:background="@drawable/download_icon"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_library_additional_stats_language_img"
        app:layout_constraintTop_toTopOf="@id/book_library_additional_stats_language_img"
        app:layout_constraintBottom_toBottomOf="@id/book_library_additional_stats_language_img"/>

    <TextView
        android:id="@+id/book_library_additional_stats_pages_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="500 pages"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/league_spartan"

        app:layout_constraintTop_toBottomOf="@id/book_library_additional_stats_pages_img"
        app:layout_constraintEnd_toEndOf="@+id/book_library_additional_stats_pages_img"
        app:layout_constraintStart_toStartOf="@+id/book_library_additional_stats_pages_img" />

    <TextView
        android:id="@+id/book_library_additional_stats_language_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="English"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/league_spartan"

        app:layout_constraintEnd_toEndOf="@+id/book_library_additional_stats_language_img"
        app:layout_constraintStart_toStartOf="@+id/book_library_additional_stats_language_img"
        app:layout_constraintTop_toBottomOf="@id/book_library_additional_stats_language_img"/>


    <TextView
        android:id="@+id/book_library_additional_stats_downloads_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="1,000+ downloads"
        android:fontFamily="@font/league_spartan"

        android:textSize="12dp"

        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/book_library_additional_stats_downloads_img"
        app:layout_constraintStart_toStartOf="@+id/book_library_additional_stats_downloads_img"
        app:layout_constraintTop_toBottomOf="@+id/book_library_additional_stats_downloads_img" />





    <TextView
        android:id="@+id/book_library_about_author_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="About author"
        android:textSize="20dp"
        android:fontFamily="@font/league_spartan"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_library_additional_stats_language_tv"
        app:layout_constraintBottom_toTopOf="@id/book_library_about_author_content"
        />

    <TextView
        android:id="@+id/book_library_about_author_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
        android:textSize="14dp"
        android:fontFamily="@font/mainfont"

        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_library_about_author_heading"/>


    <TextView
        android:id="@+id/book_library_category_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Categories"
        android:textSize="20dp"
        android:fontFamily="@font/league_spartan"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_library_about_author_content"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/book_library_category_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingHorizontal="20dp"



        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_library_category_heading"
        >

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
</com.factor.bouncy.BouncyNestedScrollView>

