<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookReadPageViewActivity">

    <TextView
        android:id="@+id/book_read_page_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:textSize="24dp"
        android:text="The Secret Wishlist"

        android:layout_marginHorizontal="10dp"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/book_read_page_view_rv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_read_page_view_rv"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/book_read_page_view_title"
        app:layout_constraintBottom_toTopOf="@id/book_read_page_view_page_no"/>

    <TextView
        android:id="@+id/book_read_page_view_page_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Page 1 of 227"
        android:textSize="14dp"
        android:paddingBottom="10dp"

        app:layout_constraintTop_toBottomOf="@id/book_read_page_view_rv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>