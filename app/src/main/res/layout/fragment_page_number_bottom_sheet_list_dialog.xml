<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_no_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_surface"
    android:clipToPadding="false"
    android:paddingHorizontal="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    tools:context=".fragment.PageNumberBottomSheet">

    <TextView
        android:id="@+id/book_read_page_no_bottomsheet_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Page 0 of 0"
        android:textSize="16dp"
        android:textColor="@color/background_contrast"
        android:fontFamily="@font/league_spartan"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/book_read_page_no_sb"
        android:layout_marginVertical="10dp"/>

    <SeekBar
        android:id="@+id/book_read_page_no_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:thumb="@drawable/font_size_seekbar_thumb"
        android:tickMark="@drawable/font_size_seekbar_tick"
        app:layout_constraintTop_toBottomOf="@id/book_read_page_no_bottomsheet_tv"
        android:layout_marginVertical="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>