<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_color"
    tools:context=".activity.SnippetVerificationAdminONLYActivity">



    <TextView
        android:id="@+id/snippet_verification_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Admin verification"
        android:textColor="@color/background_contrast"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/snippet_verification_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Edit first and swipe right to verify snippet.\nSwipe left to delete snippet!"
        android:textColor="@color/background_contrast"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/snippet_verification_heading"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/snippet_verification_parent_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="0dp"
        android:windowSoftInputMode="adjustResize"
        android:backgroundTint="@color/background_surface"
        app:layout_constraintBottom_toTopOf="@id/snippet_verification_verified"
        app:layout_constraintTop_toBottomOf="@id/snippet_verification_subheading">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/snippet_verification_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="30dp"
                android:backgroundTint="@color/background_color"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/snippet_verification_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image3"/>
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/snippet_verification_card"
                app:layout_constraintBottom_toTopOf="@id/snippet_verification_bookname">

            <EditText
                android:id="@+id/snippet_verification_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="45dp"
                android:background="#00000000"
                android:inputType="textMultiLine"
                android:fontFamily="@font/mainfont"
                android:text="This is the body of the snippet"
                android:textSize="15dp"
/>
            </ScrollView>
            <TextView
                android:id="@+id/snippet_verification_authorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Author name"
                android:textSize="10dp"
                android:textColor="@color/background_contrast"
                android:fontFamily="@font/mainfont"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/snippet_verification_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Around the world in 80 days"
                android:textSize="10dp"
                android:textColor="@color/background_contrast"
                android:fontFamily="@font/mainfont"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toTopOf="@id/snippet_verification_authorname"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/snippet_verification_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#5500ff00"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="VERIFIED"
            android:textColor="@color/background_contrast"
            android:textSize="25dp"
            android:fontFamily="@font/league_spartan"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/snippet_verification_notverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#55ff0000"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="DELETE"
            android:textSize="25dp"
            android:textColor="@color/background_contrast"
            android:fontFamily="@font/league_spartan"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>