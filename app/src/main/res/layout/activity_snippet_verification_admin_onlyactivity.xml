<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.SnippetVerificationAdminONLYActivity">

    <TextView
        android:id="@+id/snippet_verification_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Admin verification"
        android:textColor="@color/background_contrast"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/snippet_verification_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Edit first and swipe right to verify snippet.\nSwipe left to delete snippet!"
        android:textColor="@color/background_contrast"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/snippet_verification_heading"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/snippet_verification_cardstackview"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/snippet_verification_subheading"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>