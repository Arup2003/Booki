<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BookLibraryFragment"

    android:background="@color/background_color">

    <TextView
        android:id="@+id/book_library_heading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Collections"
        android:textColor="@color/background_contrast"
        android:gravity="center"
        android:paddingTop="100dp"
        android:fontFamily="@font/league_spartan"
        android:textSize="24dp"

        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/book_library_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="2"
        android:horizontalSpacing="30dp"
        android:verticalSpacing="30dp"
        android:padding="30dp"

        app:layout_constraintTop_toBottomOf="@id/book_library_heading_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>