<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".fragment.Onboarding_PagegoalsFragment">

    <TextView
        android:id="@+id/fragment_pagegoals_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_pagegoals"
        android:textSize="25dp"
        android:textColor="@color/background_contrast"
        android:fontFamily="@font/league_spartan"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/fragment_pagegoals_cat"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/cat4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_pagegoals_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/fragment_pagegoals_cattextview"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="40dp"
        android:layout_height="wrap_content"
        android:text="meow... i bet i read more than you hehe"
        android:textColor="@color/background_contrast"
        android:fontFamily="@font/league_spartan"
        app:layout_constraintTop_toBottomOf="@id/fragment_pagegoals_cat"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_pagegoals_1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="7dp"
        app:cornerRadius="15dp"
        android:elevation="0dp"
        android:fontFamily="@font/league_spartan"
        android:textSize="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/background_contrast"
        android:textColor="@color/background_contrast"
        android:backgroundTint="@color/background_surface"
        android:text="0-25 pages"
        app:layout_constraintEnd_toStartOf="@id/fragment_pagegoals_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_pagegoals_3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_pagegoals_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cornerRadius="15dp"
        android:elevation="0dp"
        android:textSize="12dp"
        app:strokeWidth="1dp"
        android:fontFamily="@font/league_spartan"
        app:strokeColor="@color/background_contrast"
        android:textColor="@color/background_contrast"
        android:backgroundTint="@color/background_surface"
        android:layout_margin="7dp"
        android:text="25-50 pages"
        app:layout_constraintStart_toEndOf="@id/fragment_pagegoals_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_pagegoals_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_pagegoals_3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cornerRadius="15dp"
        android:layout_margin="7dp"
        android:elevation="0dp"
        android:textSize="12dp"
        app:strokeWidth="1dp"
        android:fontFamily="@font/league_spartan"
        app:strokeColor="@color/background_contrast"
        android:textColor="@color/background_contrast"
        android:backgroundTint="@color/background_surface"
        android:text="50-100 pages"
        app:layout_constraintEnd_toStartOf="@id/fragment_pagegoals_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_pagegoals_4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cornerRadius="15dp"
        android:layout_margin="7dp"
        android:elevation="0dp"
        android:textSize="12dp"
        app:strokeWidth="1dp"
        android:fontFamily="@font/league_spartan"
        app:strokeColor="@color/background_contrast"
        android:textColor="@color/background_contrast"
        android:backgroundTint="@color/background_surface"
        android:text="100+ pages"
        app:layout_constraintStart_toEndOf="@id/fragment_pagegoals_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>