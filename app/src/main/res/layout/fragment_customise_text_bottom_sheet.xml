<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_read_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingHorizontal="20dp"
    android:background="@color/background_surface"
    tools:context=".fragment.CustomiseTextBottomSheet">

    <TextView
        android:id="@+id/book_read_edit_font_style_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Font style"
        android:textSize="16dp"
        android:textColor="@color/background_contrast"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/book_read_font_style_rv"
        android:layout_marginVertical="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_read_font_style_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/book_read_edit_font_style_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/book_read_separator1"/>

    <ImageView
        android:id="@+id/book_read_separator1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_contrast"
        android:layout_marginVertical="5dp"

        app:layout_constraintTop_toBottomOf="@id/book_read_font_style_rv"
        app:layout_constraintBottom_toTopOf="@id/book_read_edit_font_size_tv"/>

    <TextView
        android:id="@+id/book_read_edit_font_size_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Font size"
        android:textSize="16dp"
        android:textColor="@color/background_contrast"

        app:layout_constraintTop_toBottomOf="@id/book_read_separator1"
        app:layout_constraintBottom_toTopOf="@id/book_read_font_size_iv1"
        android:layout_marginVertical="5dp"/>

    <ImageView
        android:id="@+id/book_read_font_size_iv1"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:src="@drawable/font_size_icon"

        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/book_read_edit_font_size_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/book_read_font_size_sb"
        app:layout_constraintBottom_toTopOf="@id/book_read_separator2"/>

    <SeekBar
        android:id="@+id/book_read_font_size_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:thumb="@drawable/font_size_seekbar_thumb"
        android:tickMark="@drawable/font_size_seekbar_tick"


        android:layout_marginHorizontal="40dp"

        app:layout_constraintTop_toTopOf="@id/book_read_font_size_iv1"
        app:layout_constraintBottom_toBottomOf="@id/book_read_font_size_iv1"
/>

    <ImageView
        android:id="@+id/book_read_font_size_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/font_size_icon"

        app:layout_constraintTop_toTopOf="@id/book_read_font_size_iv1"
        app:layout_constraintStart_toEndOf="@id/book_read_font_size_sb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/book_read_font_size_iv1"/>

    <ImageView
        android:id="@+id/book_read_separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_contrast"
        android:layout_marginVertical="10dp"

        app:layout_constraintTop_toBottomOf="@id/book_read_font_size_iv1"
        app:layout_constraintBottom_toBottomOf="@id/book_read_edit_page_color_tv"/>

    <TextView
        android:id="@+id/book_read_edit_page_color_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Page color"
        android:textSize="16dp"
        android:textColor="@color/background_contrast"

        app:layout_constraintTop_toBottomOf="@id/book_read_separator2"
        app:layout_constraintBottom_toTopOf="@id/book_read_font_color_rv"
        android:layout_marginVertical="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_read_font_color_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/book_read_edit_page_color_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>